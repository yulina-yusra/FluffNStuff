

<!DOCTYPE html>
<html>
<head>
    <style>
        .na {
            text-decoration: none;
            color: white;
        }
    </style>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href=""> Fluff N Stuff  </a>
            </div>



            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Category", "Index", "User", null, new { @class = "ht" })</li>
                <li> <a href=""> About </a></li>
                <ul class="nav navbar-nav">
                    <li>
                        @if (Session["u_id"] != null)
                        {


                          


                        <li style="color:whitesmoke;margin-top:20px;margin-left:70px"> @Session["user"]</li>

                    }
                        </li>

                        <li style="float:right">
                            @if (Session["u_id"] == null)
                            {



                                @Html.ActionLink("Sign In", "login", "User", null, new { @class = "ht", })

                            }
                        </li>
                        <li style="float:right">
                            @if (Session["u_id"] == null)
                            {
                                @Html.ActionLink("Sign Up", "Register", "User", null, new { @class = "ht" })
                            }
                            else
                            {
                                @Html.ActionLink("Sign Out", "SignOut", "User", null, new { @class = "ht" })
                            }

                        <li>
                    </ul>

            </div>
        </nav>

        @RenderBody()
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/bootstrap.js"></script>
    </body>

</html>