@{
    ViewBag.Title = ("checkout");
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<h2>checkout</h2>
@if (TempData["cart"] != null)
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Bill</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in TempData["cart"] as List<FluffNStuff.Models.cart>)
            {
                <tr>
                    <td>@item.subcat_id</td>
                    <td>@item.subcat_name</td>
                    <td>@item.subcat_price</td>
                    <td>@item.o_qty</td>
                    <td>@item.o_bill</td>
                </tr>
            }
        </tbody>
        <tfoot>

            <tr>
                <td colspan="4"></td>
                <td>@TempData["total"]</td>
            </tr>

        </tfoot>

    </table>

}
else
{
    <h3 style="color:red"> Cart is Empty </h3>
    @Html.ActionLink("Back", "Index", "User");
}
@if (TempData["cart"] != null)
{
    using (Html.BeginForm())
    {
        <input type="submit" value="Shop Now" class="btn btn-primary" />
    }


}